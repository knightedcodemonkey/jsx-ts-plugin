{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@knighted/jsx",
    "paths": {
      "@knighted/jsx/jsx-runtime": ["./jsx-runtime.d.ts"]
    },
    "plugins": [
      {
        "name": "@knighted/jsx-ts-plugin",
        "tags": ["jsx", "reactJsx"],
        "mode": "react"
      }
    ]
  },
  "include": ["src/**/*"]
}
