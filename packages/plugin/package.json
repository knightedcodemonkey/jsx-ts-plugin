{
  "name": "@knighted/jsx-ts-plugin",
  "version": "0.3.2",
  "description": "TypeScript language service plugin for @knighted/jsx tagged template diagnostics.",
  "main": "dist/jsx-ts-plugin.js",
  "types": "dist/jsx-ts-plugin.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "require": "./dist/jsx-ts-plugin.js",
      "default": "./dist/jsx-ts-plugin.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prepack": "npm run build",
    "test": "npm run build && node test/verify-plugin.cjs && node test/internal-coverage.cjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "language-service",
    "plugin",
    "jsx",
    "templates",
    "diagnostics"
  ],
  "author": "KCM <knightedcodemonkey@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knightedcodemonkey/jsx-ts-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/knightedcodemonkey/jsx-ts-plugin/issues"
  },
  "peerDependencies": {
    "typescript": ">=5.4.0"
  },
  "engines": {
    "node": ">=22"
  }
}
