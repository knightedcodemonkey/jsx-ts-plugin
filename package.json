{
  "name": "jsx-ts-plugin-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @knighted/jsx-ts-plugin",
    "clean": "npm run clean -w @knighted/jsx-ts-plugin",
    "lint": "oxlint packages",
    "prettier": "prettier --write .",
    "test": "npm run coverage",
    "coverage": "c8 --reporter=text --reporter=lcov npm run test -w @knighted/jsx-ts-plugin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@knighted/jsx": "file:../jsx",
    "@types/node": "^22.10.1",
    "c8": "^10.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.35.0",
    "prettier": "^3.7.4",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=22"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*": [
      "npm run lint",
      "npm run prettier"
    ]
  }
}
